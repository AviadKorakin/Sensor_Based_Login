<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#F5F5F5" /> <!-- Light Gray Background -->

    <!-- Rounded Corners -->
    <corners android:radius="12dp" />

    <!-- Border (Optional) -->
    <stroke
        android:width="2dp"
        android:color="#D6D6D6" /> <!-- Slightly Darker Gray Border -->

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
