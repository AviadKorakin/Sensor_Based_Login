<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#B0000000" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="40dp" />
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <gradient
                android:startColor="#FFEBEE"
                android:endColor="#FFCDD2"
                android:angle="45" />
            <corners android:radius="40dp" />
            <stroke android:width="2dp" android:color="#FF0000" /> <!-- Red Stroke -->
        </shape>
    </item>
</layer-list>